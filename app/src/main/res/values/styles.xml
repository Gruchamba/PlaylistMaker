    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/blackAndWhiteColor</item>
        <item name="android:textColor">?attr/whiteAndBlackColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="iconTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ButtonStyle.MainMenuButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="background">?attr/whiteAndBlackColor</item>
        <item name="tabTextColor">?attr/blackAndWhiteColor</item>
        <item name="tabIndicatorColor">?attr/blackAndWhiteColor</item>
        <item name="tabIndicatorFullWidth">true</item>
<!--        <item name="tabIndicatorHeight">4dp</item>-->
<!--        <item name="tabIndicatorGravity">bottom</item>-->
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="AudioPlayerTrackLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/yp_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AudioPlayerTrackLabelStyle.TrackValueStyle">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="ButtonStyle.DefaultStyle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>